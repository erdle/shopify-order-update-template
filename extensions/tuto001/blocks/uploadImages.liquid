{% assign fruits = "orange, apple, , peach, apple" | split: ',' %}
{% capture capture_var %}Capture tag example{% endcapture %}
{{ capture_var }}
    <div>
        <table>
            {% tablerow product in collection.products %}
                {{ product.title }}
            {% endtablerow %}
        </table>
    </div>
{% for xyz in fruits %}
{% unless xyz == blank -%}
    <div>
        <h5> 
            {% cycle 'qwer', 'sdf', 'uip' %}
            {{ xyz }} </br>
        </h5>
    </div>
   
    {%- endunless -%}
{% endfor %}



{% schema %}
{
    "name": "Hello World",
    "target": "section",
    "stylesheet": "app.css",
    "javascript": "app.js",
    "settings": [
        {
            "label": "Color",
            "id": "color",
            "type": "color",
            "default": "#000000"
        }, {
            "label": "Image Selector",
            "id": "image_selector",
            "type": "image_picker"
        }
